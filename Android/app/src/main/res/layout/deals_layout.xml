<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >


    <ImageView
        android:id="@+id/thumbsUpView"
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/thumbs_up"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignTop="@+id/thumbsDownView"
        android:layout_toRightOf="@+id/thumbsDownView"
        android:layout_toEndOf="@+id/thumbsDownView" />

    <ImageView
        android:id="@+id/thumbsDownView"
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/thumbs_down"
        android:layout_alignTop="@+id/dealView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/dealView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="TextView"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/thumbsUpView"
        android:layout_toEndOf="@+id/thumbsUpView" />

    <TextView
        android:id="@+id/downTextView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="TextView"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/thumbsUpView"
        android:layout_alignLeft="@+id/thumbsUpView"
        android:layout_alignStart="@+id/thumbsUpView" />

    <TextView
        android:id="@+id/upTextView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="TextView"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/thumbsUpView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

</RelativeLayout>